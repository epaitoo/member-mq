// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  fullName    String?
  email       String   @unique
  role        Role     @default(USER)
  phoneNumber Int?
  hash        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("users")
}

model Member {
  id          String   @id @default(uuid())
  fullName    String
  email       String?  @unique
  phoneNumber Int
  group       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("members")
}

enum Role {
  USER
  ADMIN
}
